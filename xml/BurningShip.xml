<plugin xmlns="http://mbilotta.altervista.org/julia/descriptor"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:type="formula">
	<class>org.altervista.mbilotta.julia.impl.formulas.BurningShipFormula</class>
	<mandelbrotSetDefaults>
		<re0>-2.5</re0>
		<im0>-1</im0>
		<re1>1.5</re1>
		<im1>2</im1>
	</mandelbrotSetDefaults>
	<juliaSetDefaults>
		<re0>-2</re0>
		<im0>2</im0>
		<re1>2</re1>
		<im1>-2</im1>
		<reC>0</reC>
		<imC>0</imC>
	</juliaSetDefaults>
	<parameter id="bailout" xsi:type="real">
		<hint>20</hint>
	</parameter>
	<documentation xml:lang="en">
		<name>Burning Ship formula</name>
		<description>
		[var]z[/var] ‚Üê (|Re([var]z[/var])| - [var]i[/var]|Im([var]z[/var])|)[sup]2[/sup] + [var]c[/var].
		</description>
		<parameter id="bailout">
			<name>Bailout</name>
			<description>Bailout radius.</description>
		</parameter>
	</documentation>
</plugin>
