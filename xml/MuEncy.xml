<plugin xmlns="http://mbilotta.altervista.org/julia/descriptor"
	xmlns:xml="http://www.w3.org/XML/1998/namespace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:type="representation">
	<class>org.altervista.mbilotta.julia.impl.munafo.MuEncyRepresentation</class>
	<parameter id="maxIterations" xsi:type="int">
		<hint>500</hint>
	</parameter>
	<parameter id="bailout" xsi:type="real">
		<hint>20</hint>
	</parameter>
	<parameter id="distanceEstimateComputed" xsi:type="boolean">
		<hint>true</hint>
	</parameter>
	<parameter id="continuousDwellComputed" xsi:type="boolean">
		<hint>true</hint>
	</parameter>
	<parameter id="binaryDecompositionComputed" xsi:type="boolean">
		<hint>true</hint>
	</parameter>
	<parameter id="dwellScaleLimit" xsi:type="int">
		<hint>100000</hint>
	</parameter>
	<parameter id="angleWeight" xsi:type="double">
		<hint>2.9</hint>
	</parameter>
	<parameter id="finalradWeight" xsi:type="double">
		<hint>0.05</hint>
	</parameter>
	<parameter id="finalangWeight" xsi:type="double">
		<hint>0.15</hint>
	</parameter>
	<parameter id="numOfSteps" xsi:type="int">
		<hint>5</hint>
	</parameter>
	<parameter id="optimizationDomain" xsi:type="enum">
		<hint>BORDERS_EXCLUDED</hint>
	</parameter>
	<documentation xml:lang="en">
		<name>Mu-Ency Representation</name>
		<description>
		This representation is based on the [a href="http://mrob.com/pub/muency/color.html"]algorithm[/a]
		used in the [a href="http://mrob.com/pub/muency.html"]Mu-Ency[/a] illustrations by [a href="http://mrob.com/"]Robert Munafo[/a].
		</description>
		<parameter id="maxIterations">
			<name>Max iterations</name>
			<description></description>
		</parameter>
		<parameter id="bailout">
			<name>Bailout</name>
			<description></description>
		</parameter>
		<parameter id="distanceEstimateComputed">
			<name>Compute distance estimate</name>
			<description></description>
		</parameter>
		<parameter id="continuousDwellComputed">
			<name>Compute continuous dwell</name>
			<description></description>
		</parameter>
		<parameter id="binaryDecompositionComputed">
			<name>Compute binary decomposition</name>
			<description></description>
		</parameter>
		<parameter id="dwellScaleLimit">
			<name>Dwell scale limit</name>
			<description></description>
		</parameter>
		<parameter id="angleWeight">
			<name>Angle weight</name>
			<description></description>
		</parameter>
		<parameter id="finalradWeight">
			<name>Finalrad weight</name>
			<description></description>
		</parameter>
		<parameter id="finalangWeight">
			<name>Finalang weight</name>
			<description></description>
		</parameter>
		<parameter id="numOfSteps">
			<name>Number of steps</name>
			<description></description>
		</parameter>
		<parameter id="optimizationDomain">
			<name>Optimization domain</name>
			<description></description>
		</parameter>
	</documentation>
</plugin>
