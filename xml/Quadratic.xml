<plugin xmlns="http://mbilotta.altervista.org/julia/descriptor"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:type="formula">
	<class>org.altervista.mbilotta.julia.impl.formulas.QuadraticFormula</class>
	<mandelbrotSetDefaults>
		<re0>-2.25</re0>
		<im0>1.5</im0>
		<re1>0.75</re1>
		<im1>-1.5</im1>
	</mandelbrotSetDefaults>
	<juliaSetDefaults>
		<re0>-1.5</re0>
		<im0>1.5</im0>
		<re1>1.5</re1>
		<im1>-1.5</im1>
		<reC>0</reC>
		<imC>0</imC>
	</juliaSetDefaults>
	<parameter id="bailout" xsi:type="real">
		<hint>20</hint>
	</parameter>
	<documentation xml:lang="en">
		<name>Quadratic formula</name>
		<description>
		[var]z[/var] ← [var]z[/var][sup]2[/sup] + [var]c[/var]. Fractals originated from this formula were the first to be
		viewed on a computer screen.
		</description>
		<parameter id="bailout">
			<name>Bailout</name>
			<description>Bailout radius.</description>
		</parameter>
	</documentation>
	<documentation xml:lang="it">
		<name>Formula quadratica</name>
		<description>
		[var]z[/var] ← [var]z[/var][sup]2[/sup] + [var]c[/var]. I frattali generati da questa formula sono stati i primi ad
		essere visualizzati sullo schermo di un computer.
		</description>
		<parameter id="bailout">
			<name>Bailout</name>
			<description>Raggio di un cerchio centrato nell'origine.</description>
		</parameter>
	</documentation>
</plugin>
